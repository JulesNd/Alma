{
    "extends": "../tslint.json",
    "rules": {
      "no-string-literal": false,
      "max-line-length": [
        true,
        {
          "limit": 100000,
          "ignore-pattern": "^import [^,]+ from |^export | implements"
        }
      ],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
